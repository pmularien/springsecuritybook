	<!-- Ch 4 In-memory HSQLDB -->	
	<jdbc:embedded-database id="dataSource" type="HSQL">
		<jdbc:script location="classpath:security-schema.sql"/>
		<!-- Ch 4 Start -->
		<jdbc:script location="classpath:test-data.sql"/>
		 <!--  Ch 4 Remember Me Persistence -->
		<!-- 
